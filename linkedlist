class linkedlist{
    constructor(value){
        this.head={
            value:value,
            next:null
        }
        this.tail=this.head;
        this.length=1;
    }
    append(value){
        let addlinked={
            value:value,
            next:null
        }
        this.tail.next=addlinked;
        this.tail=addlinked;
        this.length+=1;
    }
    prepend(value){
        let addlinked={
            value:value,
            next:this.head
        }
        this.head=addlinked;
        this.length+=1;
      
    }
    printList(){
        let arr1=[];
        let currentNode=this.head;
        let value=0
        while(currentNode!==null){
            arr1.push(currentNode.value);
            currentNode=currentNode.next;
        }
        return arr1;
    }
    insert(index,value){
        let currentNode=this.head;
        let arr1=[];
        let num=index;
        for(let i=0;i<=index;i++){
            if(i==num){
                currentNode.value=value;
                currentNode.next=currentNode.next;
                this.length+=1;
            }
            
            currentNode=currentNode.next;
        }
      
    }

}


const mylinkedlist=new linkedlist(10);
mylinkedlist.append(20);
mylinkedlist.append(30);
mylinkedlist.prepend(4);
mylinkedlist.insert(0,2);
console.log(mylinkedlist);
